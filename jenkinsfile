    pipeline {
    agent any
    
    stages {
        stage('Git') {
            steps {
                echo 'Pulling from Git'
                script {
                    git branch: 'YoussefHamouda_5SAE4_DEVTECH',
                        url: 'https://github.com/manaayassine/5SAE4_DEVTECH_KADDEM.git/'
                }
            }
        }

        stage('Maven Clean') {
            steps {
                echo 'Running Maven Clean'
                sh 'mvn clean'
            }
        }

        stage('Maven Compile') {
            steps {
                echo 'Running Maven Compile'
                sh 'mvn compile'
            }
        }
        
              stage('SonarQube Analysis') {
           steps {
             withSonarQubeEnv('sonarqueb') {
               sh "mvn sonar:sonar"
             }
            }
        }
stage ('MVN TEST') {
            steps {
                sh 'mvn test'
            }
        }

 stage('Nexus') {
            steps {
                script {
                    sh 'mvn deploy -DskipTests'
                }
            }
        }

stage('BUILD IMAGE'){
      steps{
  sh ' docker build -t kaddem:1.0 .'
      }
    }
stage('Push Docker Hub') {
    steps {
        script {
           
            def dockerHubImageName = "youssefhamouda/kaddem"  
          withCredentials([string(credentialsId: 'dockerhub', variable: 'dockerhub')]) {
                   sh 'docker login -u youssefhamouda -p ${dockerhub}'
       

            sh "docker push $dockerHubImageName"
        }}}}
stage('DOCKER COMPOSE'){
      steps{
        sh 'docker compose up -d '
      }
    }
       
    }
}
